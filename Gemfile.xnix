gem 'unicorn'

#dev
gem 'inherited_resources'
gem 'simple_form'

group :test do
  gem "rspec-rails", "~> 2.0"
  gem 'capybara'#, '1.1.2'
  gem 'guard-spork'#, '0.3.2'
  gem 'spork'#, '0.9.0'
end
