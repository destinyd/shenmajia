<% upload = cost.good.try(:uploads).try(:first) %>
<div class="cost c" data-time="<%= cost.created_at.to_i %>">  
  <div class="l">
    <%= link_to cost do %>
      <% if upload  %>
        <% if upload.image_file_name.scan(/http/).blank? %>
          <img src='<%=upload.image.url %>' alt='<%= cost.good.name %>' />
        <% else %>
          <img src='<%=upload.image_file_name %>' alt='<%= cost.good.name %>'/>
        <% end %>
      <% else %>
        <img src='/images/nopic.gif' alt='nopic' />
      <% end -%>
    <% end %>
  </div>
  <div class="detail"><%=link_to  cost.good.name.try(:block,150),cost,:target => '_blank' %>
    <br />
    价格：<%= cost.money %>
    <% if cost.locatable.try(:addr) %><br />地址：<%= cost.locatable.try(:addr) %><% end %>
  </div>
</div>

