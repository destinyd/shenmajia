<div class="cost" data-time="<%= bill.created_at.to_i %>" id="bill_<%= bill.id %>">  
  <div class="l">
    <%=link_to  bill,bill,:target => '_blank', :title=> bill %><br />
    账单总额：<%= bill.total %><br />
    <% if bill.locatable %>
      地点：<%= link_to bill.locatable, bill.locatable %>
    <% end %>
  </div>  
  <div class="detail">
    <% bill.prices.map(&:uploads).map(&:first).each do |upload| %>
      <%= link_to bill do %>
        <% if upload.image_file_name.scan(/http/).blank? %>
          <img src='<%=upload.image.url %>' alt='<%= bill %>' title='<%= bill %>' />
        <% else %>
          <img src='<%=upload.image_file_name %>' alt='<%= bill %>' title='<%= bill %>' />
        <% end %>
      <% end if upload %>
    <% end -%>
  </div>
</div>