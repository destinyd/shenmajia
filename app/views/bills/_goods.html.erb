<div class="form_goods_search">
  <ul class="table pretty">  
    <li class="name">名称</li>  
    <li>规格</li>  
    <li>单位</li>  
    <%#<li>参考产地</li>  %>
    <li>操作</li>  
  </ul>
  <% goods.each do |good|  %>
    <%= content_tag :ul,class: 'table' do %>
      <%= content_tag 'li',class: 'name' do -%>
        <%= good.name %>
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.norm %>&nbsp;
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.unit %>
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.origin %>&nbsp;
      <% end if nil %>
      <%= content_tag 'li' do -%>
        <%= button_to '选此商品',place_carts_path(place,good_id: good.id),method:  :post, remote: true %>
      <% end %>      
    <% end %>
  <% end  %>
  <div class="c"></div>
  <% if goods.methods.include? :total_pages %>
  <div class="r">
    <%= will_paginate goods %>
  </div>
  <% end -%>
</div>
<div class="c"></div>
