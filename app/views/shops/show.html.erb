<% 
  set_meta_tags keywords:  "#{@shop},网购,商品展示", 
  description:  "#{strip_tags(@shop.desc).block 250}",
  title:  "#{@shop}"
%>
<% @where_name = @shop.name %>
<% @where = @shop %>
<% session[:shop] ||= {} %>
<% session[:shop][:id] = @shop.id %>
<%= render 'show',shop: @shop %>

<% content_for :plus do -%>
  <%= section title: '本店商品',plus_path:shop_inventories_path(@shop) do %>
    <%= render 'inventories/index', inventories: @shop.inventories.recent.page(params[:page]) %>
  <% end %>
<% end -%>

<% content_for :sidebar do -%>
  <%= section title: '联系方式' do %>
    <%= render 'contacts',shop: @shop %>
  <% end unless @shop.shop_contacts.blank? %>
<% end -%>
