<% @where_name = @product.name %>
<% @where = @product %>
<p>
<b>品牌名称:</b>
<%= @product.name %>
</p>
<p>
<b>描述:</b>
<%= @product.desc %>
</p>
<% if @product.tag_list %>
<p>
<b>标签:</b>
<% @product.tags.each do |tag| %>
  <%= tag -%>
<% end -%>
</p>
<% end %>
<% content_for :plus do -%>
  <% unless @product.goods.blank? %>
    <%= section :title => '品牌商品' do %>
      <%= render(@product.goods) %>
    <% end-%>
  <% end %>
<% end -%>
