<h1>Listing records</h1>

<table>
  <tr>
    <th>Target</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.target %></td>
    <td><%= record.user %></td>
    <td><%= link_to t('labels.show'), record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

