<%= form_for(@flash, :html => { :multipart => true}) do |f| %>
  <% if @flash.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flash.errors.count, "error") %> prohibited this flash from being saved:</h2>

      <ul>
      <% @flash.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>  

  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, Category.all.collect{|category| [category.name,category.id]},{:include_blank => '空闲分类'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
