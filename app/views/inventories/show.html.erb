<% 
  set_meta_tags keywords:  "#{@inventory}", 
  description:  "#{@inventory}商品信息,#{@inventory}价格分析,#{@inventory}价格信息",
  title:  "#{@inventory}"
%>
<% @where_name = @inventory %>
<% @where = @inventory %>

<h1><%= @inventory.name %></h1>
<div id="inventory">
  <div id="images_field">
    <div id="current_img">
      <% upload = @inventory.good.uploads.first %>
      <%= img_upload upload,@inventory %>
    </div>
    <div class="images">
      <% Upload.limit(5).each do |upload| %>
        <div class="small_img">
          <%= img_upload upload,@inventory,:small %>
        </div>
      <% end %>
      <div class="c"></div>
    </div>
  </div>
  <div class = "detail">
    <%= p_field @inventory,:current %>
    <%= p_field @inventory,:original %>
    <%= p_field @inventory.good,:norm %>
    <%= p_field @inventory.good,:unit %>
    <%= p_field @inventory.good,:barcode %>
    <%= p_field @inventory.good,:origin %>
    <br />
    <%= button_to '购买',shop_carts_path(inventory_id: @inventory) %>
  </div>
  <div class="c"></div>
</div>

<%= content_tag 'p' do %>
  <%= raw @inventory.good.desc if (@inventory.good.user_id? and  @inventory.good.is_valid) or !@inventory.good.user_id? %>
  <%= @inventory.good.desc if @inventory.good.user_id and !@inventory.good.is_valid %>
<% end unless @inventory.good.desc.blank? %>

<% content_for :plus do -%>
  <%#= render 'section',plus: {things: @inventory.find_related_tags,title:  "相关商品",not_count: true} unless @inventory.find_related_tags %>
  <%= render 'comments/comments',commentable: @inventory %>
<% end -%>

<% content_for :sidebar do -%>
  <%#= render 'section',plus: {things: @inventory.prices.recent,title:  "本商品最新价格",section_path: good_prices_path(@inventory)} %>
  <%#= render 'section',plus: {things: @inventory.prices.cheapest,title:  "本商品最低价格",section_path: cheapest_good_prices_path(@inventory)} %>
<% end -%>

