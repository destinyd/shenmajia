<% set_meta_tags :keywords => "省,价格", 
  :description => "选择你所在城市 更好的查找您所需要的身边的价格信息。"
%>
<section class="cities">
  <nav><h1 id="选择你所在城市，查看区域价格信息。"><a href=#选择你所在城市，查看区域价格信息。><%= title '选择你所在城市，查看区域价格信息。'  %></a></h1></nav>
</section>
<div id="cities">
  <% cache "cities" do %>
    <% Province.scoped.includes(:cities).each do |province| %>
      <% if !province.cities.blank? %>
        <%= section :title => province.name,:style =>'height:120px;' do %>
          <% province.cities.each do |city| %>
            <%= link_to city.name,city %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
