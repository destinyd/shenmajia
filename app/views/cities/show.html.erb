<% tmp1 = "最新、最全的#{"《#{@name}》附近的" if @name}价格信息 尽在" %>
<% content_for :title do -%><%= tmp1 %><% end if tmp1 -%>
<% content_for :desc do -%><%= tmp1 %>神马价。<% end if tmp1 -%>
<% @counts = 0 %>
<div class="mt">
  <% cache "place/#{controller_name}/#{@name}/#{@cache_id}" do %>
    <%= render 'section',:plus => {:things => Price.recent.near(@value,20).limit(10),:title=> "《#{@name}》最新价格",:section_path => eval("#{controller_name.singularize}_prices_path(@name)"),:plusclass => 'home_section'} %>
    <% @counts += 1 unless Price.recent.near(@value,20).limit(10).blank? %>
    <%= render 'section',:plus => {:things => Price.cheapest.near(@value,20).limit(10),:title=> "《#{@name}》最低价格",:section_path => eval("cheapest_#{controller_name.singularize}_prices_path(@name)"),:plusclass => 'home_section'} %>
    <% @counts += 1 unless Price.cheapest.near(@value,20).limit(10).blank? %>
    <%= render 'section',:plus => {:things => Price.groupbuy.near(@value,20).limit(10),:title=> "《#{@name}》最新团购",:section_path => eval("groupbuy_#{controller_name.singularize}_prices_path(@name)"),:plusclass => 'home_section'} %>
    <% @counts += 1 unless Price.groupbuy.near(@value,20).limit(10).blank? %>
    <% if @counts >=3 %>
    </div>
    <div class="mt">
      <% @counts = 0 %>
    <% end %>
    <%= render 'section',:plus => {:things => Price.costs.near(@value,20).limit(10),:title=> "《#{@name}》最新消费记录",:section_path => eval("costs_#{controller_name.singularize}_prices_path(@name)"),:plusclass => 'home_section'} %>
  <% end %>
  <%# @counts += 1 unless @recent_cost.blank? %>
</div>
