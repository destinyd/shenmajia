<% @counts = 0 %>
<div class="mt">
  <%= render 'section',:plus => {:things => @recent_cost,:title=> "《#{@name}》最新消费记录",:section_path => costs_city_prices_path(@name),:plusclass => 'home_section'} %>
  <% @counts += 1 unless @recent_cost.blank? %>
  <%= render 'section',:plus => {:things => @cheapest,:title=> "《#{@name}》最低价格",:section_path => cheapest_city_prices_path(@name),:plusclass => 'home_section'} %>
  <% @counts += 1 unless @cheapest.blank? %>
  <%= render 'section',:plus => {:things => @recent_prices,:title=> "《#{@name}》最新价格",:section_path => city_prices_path(@name),:plusclass => 'home_section'} %>
  <% @counts += 1 unless @recent_groupbuy.blank? %>
  <% if @counts ==3 %>
  </div>
  <div class="mt">
    <% @counts = 0 %>
  <% end %>
  <%= render 'section',:plus => {:things => @recent_groupbuy,:title=> "《#{@name}》最新团购",:section_path => groupbuy_city_prices_path(@name),:plusclass => 'home_section'} %>
</div>
