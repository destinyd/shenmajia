<p>
  <b><%= label :price,:title%>:</b>
  <%= @price.title %>
</p>
<p>
  <b><%= label :price,:price%>:</b>
  <%= @price.price %>
</p>

<p>
  <b><%= label :price,:type%>:</b>
  <%= @price.type_id %>
</p>

<p>
  <b><%= label :price,:address%>:</b>
  <%= @price.address %>
</p>

<p>
  <b><%= label :price,:amount%>:</b>
  <%= @price.human_amount %>
</p>

<p>
  <b><%= label :price,:finish_at%>:</b>
  <%= @price.human_finish_at %>
</p>
<p>
  <b><%= label :price,:desc%>:</b>
  <%= @price.desc %>
</p>
<% unless @price.near_prices.blank? %>
  <h3>附近价格</h3>
  <ul>
  <% @price.near_prices.each do |price| %>
    <li><%= price.outlinks.blank? ? price : link_to(price,price.outlinks.first.url)%><%= price.address %></li>
  <% end %>
  </ul>
<% end %>
<%= render 'reviews/links' %>
<%= render 'comments/comments' %>


<%= link_to t('labels.back'), :back %>
