<% if (@price = Price.find(params[:id])).no_locate? %>
  <% cache "prices_show_cheapest_id_#{@price.id}_#{@cache_id}" do %>
    <%= render 'near_empty' %>
  <% end %>
<% else %>
  <% cache "prices_show_near_cheapest_#{"%.02f" % @price.lat}_#{"%.02f" % @price.lon}_#{@cache_id}" do %>
    $(document).ready(function(){
      $('#near_cheapest').html('<%= j(render 'near_prices',prices: @price.near_prices.where(good_id: @price.good_id).cheapest.includes(:good).limit(10),prices_title: '本商品周边最低价格') %>')
    });
  <% end %>
<% end %>
