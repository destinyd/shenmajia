<div class="bill" data-time="<%= bill.updated_at.to_i %>" id="bill_<%= bill.id %>">  
  <div class="l">
    <%=link_to  bill,bill,target: '_blank', title: bill %><br />
    账单总额：<%= bill.total %><br />
    <% if bill.locatable %>
      地点：<%= link_to bill.locatable, bill.locatable %><br />
    <% end %>
    订单状态：
    <% if bill.fully_paid %>
      <%= "于#{bill.updated_at}确认支付"  %>
    <% else %>
      <%= "未确认支付" %>
    <% end -%>
    <br />
    <%= button_to '确认支付',userhome_order_path(bill),method: :put,confirm: '你确定？' unless bill.fully_paid %>
    <%= button_to '删除',userhome_order_path(bill),method: :delete,confirm: '你确定？' unless bill.fully_paid %>
  </div>  
  <div class="images">
    <% bill.goods.map(&:uploads).map(&:first).each do |upload| %>
      <%= link_to bill do %>
        <% if upload.image_file_name.scan(/http/).blank? %>
          <img src='<%=upload.image.url %>' alt='<%= bill %>' title='<%= bill %>' />
        <% else %>
          <img src='<%=upload.image_file_name %>' alt='<%= bill %>' title='<%= bill %>' />
        <% end %>
      <% end if upload %>
    <% end -%>
  </div>
</div>
