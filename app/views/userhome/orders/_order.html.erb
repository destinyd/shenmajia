<div class="bill" data-time="<%= order.created_at.to_i %>" id="order_<%= order.id %>">  
  <div class="l">
    <%=link_to  order,userhome_order_path(order),target: '_blank', title: order %><br />
    <%= p_field order,:total %>
    <%= p_field order, :shop %>
    <p><b>账单状态：</b><%= t("status.order.#{order.status}") %></p>
    <%= button_to '确认收货', receive_userhome_order_path(order) if [11].include?(order.status) %>
    <%= button_to '取消', cancel_userhome_order_path(order) if [0].include?(order.status) %>
  </div>  
  <div class="images">
    <% order.goods.limit(4).map(&:uploads).map(&:first).each do |upload| %>
      <%= link_to userhome_order_path(order) do %>
        <%= upload_image_tag upload.image,order,:list %>
      <% end if upload %>
    <% end -%>
  </div>
</div>

