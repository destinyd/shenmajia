<% @where_name = "图片列表，第#{params[:page] || 1}页" %>
<% set_meta_tags keywords:  "图片", 
  description:  "图片列表，第#{params[:page] || 1}页",
  title: @where_name
%>
<div class="images">
  <% @uploads.each do |upload| %>
    <div class="l margin-r10">
      <%= link_to upload,title: upload.uploadable do %>
        <%= image_tag upload.image.medium,alt: upload.uploadable %>
      <% end -%>
      <p class="list_title"> <%= link_to upload.uploadable,upload %> </p>
    </div>
  <% end %>
</div>
<div class="c"></div>
<div class="pull-right">
  <%= paginate @uploads %>
</div>
