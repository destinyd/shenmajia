<% cache "sidebar_tuijian_#{@cache_id}" do %>
  <ul id="tuijian">
    <% Price.recent.with_pic.list.limit(6).each do |price| %>
      <li>
      <div>
        <div class="pics">
          <div class="pic">
            <%= link_to price do  %>
              <%= image_tag price.image.url :medium %>
            <% end -%>
          </div>
          <div class="c"></div>
        </div>
        <div class="detail">
          <p><b>商品</b>:<%= link_to price.good,price.good %></p>
          <p><b>单价</b>:<%= link_to price,price %></p>
          <p><b>地点</b>:<%= link_to price.locatable,price.locatable %></p>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
<% end %>
