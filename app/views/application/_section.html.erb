<% unless !plus[:not_count] and plus[:things].empty? %>
  <div class="section<%=" #{plus[:plusclass]}" if plus[:plusclass]  -%>">
    <h3><%=plus[:title] -%><% if plus[:section_path]  -%><span style='float:right;font-size:12px'><%= link_to "更多",plus[:section_path],:title => '更多' -%> </span><% end -%></h3>
    <ul>
      <% plus[:things].each do |thing| -%>
        <% thing =  eval("thing.#{plus[:plusable]}") if plus[:plusable] -%>
        <% diy_path =  eval("#{plus[:link_path]}(thing.#{plus[:link_name]})") if plus[:link_name] -%>
        <li>
        <% if diy_path.blank? -%>
          <%= link_to thing,thing,:target => '_blank',:title => thing -%>
        <% else -%>
          <%= link_to thing.try(plus[:link_name]),diy_path,:target => '_blank',:title => thing.try(plus[:link_name]) if plus[:link_name] -%>
          <%= link_to thing,diy_path,:target => '_blank',:title => thing unless plus[:link_name] -%>
        <% end -%>
        <%= eval("thing.#{plus[:plus_text]}") if plus[:plus_text] -%>
        </li>
      <% end -%>
    </ul>
  </div>
<% end %>
