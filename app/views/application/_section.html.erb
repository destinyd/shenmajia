<div class="in_l">
  <%= try section_path %>
  <h3><%=title %><span style='float:right;font-size:12px'><%= link_to "更多",section_path %> </span></h3>
  <ul>
    <% things.each do |thing| %>
      <% begin %>
        <% diy_path =  eval("#{link_path}(thing.#{link_name})") %>
      <% rescue %>
      <% end %>
    <li>
    <% if diy_path.blank? %>
      <%= link_to thing,thing %>
    <% else %>
      <%= link_to thing.try(link_name),eval("#{link_path}(thing.#{link_name})") %>
    <% end %>
    </li>
  <% end %>
  </ul>
</div>
