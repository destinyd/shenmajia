<div class="section<%=" #{plus[:plusclass]}" if plus[:plusclass]  -%>">
  <h3><%=plus[:title] -%><% if plus[:section_path]  -%><span style='float:right;font-size:12px'><%= link_to "更多",plus[:section_path] -%> </span><% end -%></h3>
  <ul>
    <% plus[:things].each do |thing| -%>
      <% thing =  eval("thing.#{plus[:plusable]}") if plus[:plusable] -%>
      <% diy_path =  eval("#{plus[:link_path]}(thing.#{plus[:link_name]})") if plus[:link_name] -%>
      <li>
      <% if diy_path.blank? %>
        <%= link_to thing,thing,:target => '_blank' %>
      <% else -%>
        <%= link_to thing.try(plus[:link_name]),diy_path,:target => '_blank' if plus[:link_name] -%>
        <%= link_to thing,diy_path,:target => '_blank' unless plus[:link_name] -%>
      <% end -%>
      </li>
    <% end -%>
  </ul>
</div>
