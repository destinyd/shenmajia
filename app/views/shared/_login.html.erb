<%= form_for(User.new, :as => 'user', :url => session_path('user'),:remote => true) do |f| %>
  <%= f.label :email,'邮箱' %>
  <%= f.email_field :email,:class => 'input' %>

  <%= f.label :password,'密码' %>
  <%= f.password_field :password,:class => 'input' %>
    <%= f.check_box :remember_me %> <%= f.label "记住我" %>

  <%= f.submit "登录",:name => nil %>
  <%= link_to "注册",new_registration_path('user') %>
  <%= link_to "忘记密码?", new_password_path('user') %>
<% end %>
