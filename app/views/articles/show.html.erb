<h2 class="title" style='text-align:center;'>
  <%= @article.title %>
</h2>
<div class="under_title" style="text-align:center;">
  作者:<%= @article.user %> 发表于:<%= @article.updated_at %>
  <%= link_to t('labels.edit'), edit_article_path(@article) if @article.user == current_user %>
  <%= link_to t('labels.del'), @article, :confirm => t('labels.sure?'), :method => :delete if @article.user == current_user %>
  <%= render 'reviews/links' %>
</div>

<p>
  <%= @article.content %>
</p>
