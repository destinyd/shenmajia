<% @where_name = "公告列表，第#{params[:page] || 1}页" %>
<% set_meta_tags keywords:  "公告", 
  description:  "公告列表，第#{params[:page] || 1}页",
  title: @where_name
%>
<table class="table">
  <tr>
    <th>标题</th>
    <th>发表时间</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><span class="title"><%= link_to article.title, article %></span></td>
      <td><span class="date"><%= article.updated_at %></span></td>
    </tr>
  <% end -%>
</table>
<div class="pull-right">
  <%= paginate @articles %>
</div>
<div class="clearfix"></div>
