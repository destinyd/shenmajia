<div class="list-div" data-time="<%= good.created_at.to_i %>" id="good_<%= good.id %>">  
  <div class="pull-left">
    <%= link_to good, title: good do %>
      <%= upload_image_tag good.image, good, :list %>
    <% end %>
  </div>
  <div class="list-detail pull-left">
  <%= content_tag 'p' do -%>
    <%=link_to  good.name.try(:block,150),good,target: '_blank', title: good.name %>
  <% end %>
  <%= content_tag 'p' do -%>
    规格：<%= good.norm %>
  <% end unless good.norm.blank?%>
  <%= content_tag 'p' do -%>
    单位：<%= good.unit %>
  <% end unless good.unit.blank? %>
  <%= content_tag 'p' do -%>
    参考产地：<%= good.origin %>
  <% end unless good.origin.blank?%>
  </div>
  <div class="clearfix"></div>
</div>
