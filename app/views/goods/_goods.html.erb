<div class="form_goods_search">
  <ul class="table pretty">  
    <li class="name">名称</li>  
    <li>规格</li>  
    <li>单位</li>  
    <%#<li>参考产地</li>  %>
  </ul>
  <% goods.each do |good|  %>
    <%= content_tag :ul,class: 'table' do %>
      <%= content_tag 'li',class: 'name' do -%>
        <%= link_to good.name,good %>
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.norm %>&nbsp;
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.unit %>
      <% end %>
      <%= content_tag 'li' do -%>
        <%= good.origin %>&nbsp;
      <% end if nil %>
    <% end %>
  <% end  %>
  <div class="c"></div>
  <div class="r">
    <%= paginate goods %>
  </div>
</div>
<div class="c"></div>
