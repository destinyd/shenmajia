<%= section title: '以下信息来至街旁' do %>
  <% unless @place.mayor.blank? %>
    地主: <img src="<%= @place.mayor['avatar'] %>" alt="<%= @place.mayor['nick'] %>" /><br />
  <% end %>
  <% unless @place.categories.blank? or @place.categories.class != Array %>
    分类: 
    <% @place.categories.each do |category| %>
      <img src="http://jiepang.com<%= category['icon'] %>" alt="<%= category['name'] %>" title="<%= category['name'] %>" />
    <% end %><br />
  <% end %>
    签到次数: <%= @place.checkin_num %><br />
    签到总人数: <%= @place.checkin_users_num %><br />
<% end unless @place.checkin_num.blank? %>
<%= render 'section',plus: {things: @place.near_places,title:  "周边地点"} %>
