<%= simple_form_for [@place,@price],remote: true, html: { multipart: true}  do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :good do |fg| %>
    <%= render "goods/form_fields",f:fg %>
  <% end -%>
  <%= f.input :good_id %>
  <%= f.input :price %>
  <%= f.input :type_id,collection: Price.types.map{|k,v|[v,k]},include_blank: false %>
  <%= f.input :image %>
  <%= f.input :city_id, collection: Province.all, as:  :grouped_select, group_method:  :cities, :prompt => "请选择你所在城市",input_html:{value: @place.city_id} %>
  <%= f.input :lat,input_html:{value: @place.lat} %>
  <%= f.input :lon,input_html:{value: @place.lon} %>
  <%= f.input :place_ids %>
  <%= f.submit %>
<% end %>
