<!DOCTYPE html>
<html>
  <head>
  <title><%= content_for?(:title) ? yield(:title) + t('title') : t('title') %></title>
  <meta name="description" content="<%= content_for?(:desc) ? yield(:desc) + t('desc') : t('desc') %>"/>
  <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) + t('keywords') : t('keywords') %>"/>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<!--[if IE]>
 <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
  <%= yield(:head) %>
  </head>
  <body>
    <header><%= render :partial => 'head' %></header>
    <article>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}",:class=> 'flash_message' %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </article>
  <%= render 'footer' %>
  </body>
  <script>
  if('<%=current_user.to_s%>' != '')
    $(".user_show").show();
  else
    $(".user_hide").show();
  $('.flash_message').purr();
  </script>
</html>
