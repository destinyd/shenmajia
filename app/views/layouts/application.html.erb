<%= render 'application/before_layout' %>
<div class="container">
  <div class="row">
    <div class="span12">
      <div class="mb10">
        <div class="text-center">
          <%= render 'layouts/ad_top' %>
        </div>
      </div>
      <% unless controller_name == 'home' %>
        <div class="breadcrumb">
          <%= render_crumbs separator: ' > ' %>
        </div>

      <% end %>
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </div>
</div> <!--! end of .container -->
<div id="footer">
  <%= render_cell :layouts, :footer %>
</div>
</body>
</html>

