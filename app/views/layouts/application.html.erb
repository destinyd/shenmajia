<%= render 'before_layout' %>
<article>
<div class="product_l">
  <div class="section">
    <h3>
      <a href='/'>神马价</a>
      <%# cache "bread/#{params.keys.join}" do %>
        <% if @able  %>
          &raquo; <%= link_to @able,@able  %>
        <% end -%>
        <%  if could_bread?  -%>
          &raquo; <%= link_to t("controller.#{controller_name}"),eval("#{controller_name}_path")%>
        <% end -%>
        <% unless ( could_bread? and ['index'].include? action_name) or @where -%>
          &raquo; <%= link_to t("action.#{controller_name}.#{action_name}") %>
        <% end -%>
      <%# end %>
      <% if could_bread? and @where -%>
        &raquo; <%= link_to @where_name,@where  %>
      <% end -%>
    </h3>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :class => 'flash_message' %>
    <% end %>
    <%= yield %>
  </div>
  <div class="c"></div>
  <%= yield(:plus) %>
</div>
<aside>
<%= yield(:sidebar) %>
<% cache "sidebar/articles/#{@cache_id}" do %>
  <%= render 'section',:plus => {:things => Article.recent,:title=> "最新公告",:section_path => articles_path} %>
<% end %>
<script type="text/javascript"><!--
  google_ad_client = "ca-pub-5438485447883222";
  /* sjm sidebar fit */
  google_ad_slot = "6645977803";
  google_ad_width = 336;
  google_ad_height = 280;
  //-->
</script>
<script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
</aside>
<div class="c"></div>
</article>
<script>
  if('<%=current_user.to_s%>' != '')
  $(".user_show").show();
  else
  $(".user_hide").show();
</script>
<%= render 'after_layout' %>
