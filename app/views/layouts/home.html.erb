<%= render 'before_layout' %>
<article>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
<%= yield %>
<div class="clearer"></div>
</article>
<script>
  if('<%=current_user.to_s%>' != '')
  $(".user_show").show();
  else
  $(".user_hide").show();
</script>
<%= render 'after_layout' %>
